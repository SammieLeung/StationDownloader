<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.station.stationdownloader.ui.fragment.downloading.TaskItem" />

        <variable
            name="taskItem"
            type="TaskItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/task_item_bg"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/fileIcon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:src="@mipmap/ic_video"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ProgressBar
            android:id="@+id/taskProcess"
            style="@style/Station.Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="30dp"
            android:max="100"
            android:progress="@{taskItem.progress}"
            app:layout_constraintEnd_toStartOf="@id/startTaskBtn"
            app:layout_constraintStart_toEndOf="@id/fileIcon"
            app:layout_constraintTop_toBottomOf="@id/taskName" />

        <ImageView
            android:id="@+id/startTaskBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="35dp"
            android:background="@android:color/transparent"
            app:imageResource="@{taskItem.statuBtn}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@{taskItem.taskName}"
            android:textFontWeight="400"
            android:textSize="@dimen/t2"
            app:layout_constraintStart_toStartOf="@id/taskProcess"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="下载文件.mp4" />

        <LinearLayout
            android:id="@+id/msgInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/taskProcess"
            app:layout_constraintTop_toBottomOf="@id/taskProcess">

            <TextView
                android:id="@+id/downloadSize"
                style="@style/TaskItemSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{taskItem.sizeInfo}"
                android:textSize="12sp"
                tools:text="20MB/6.7GB" />

            <View
                android:id="@+id/divider_1"
                style="@style/Divider.Vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/downloadPath"
                style="@style/TaskItemSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{taskItem.downloadPath}"
                android:textSize="12sp"
                tools:text="内置存储/Station/Movies" />

            <View
                android:id="@+id/divider_2"
                style="@style/Divider.Vertical"
                android:layout_width="1dp"
                android:layout_height="11dp" />

            <TextView
                android:id="@+id/engine"
                style="@style/TaskItemSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{taskItem.engine}"
                android:textSize="12sp"
                tools:text="默认下载" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            style="@style/TaskItemSmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@{taskItem.speed}"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/taskProcess"
            app:layout_constraintTop_toBottomOf="@id/taskProcess"
            tools:text="56KB/S" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>