<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="taskName"
            type="String" />

        <variable
            name="downloadPath"
            type="String" />

        <variable
            name="downloadSpace"
            type="String" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="750dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{taskName}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/taskFileList"
                android:layout_width="match_parent"
                android:layout_height="263dp"
                app:layoutManager="LinearLayoutManager"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:layout_below="@id/titleView" />

            <LinearLayout
                android:id="@+id/filterGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskFileList"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/filterSets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/videoCBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_video" />

                    <CheckBox
                        android:id="@+id/audioCBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_audio" />

                    <CheckBox
                        android:id="@+id/pictureCBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_image" />

                    <CheckBox
                        android:id="@+id/otherCBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_other" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/engineSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/downloadPathGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/filterGroup"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/filePickerBtn">

                <TextView
                    android:id="@+id/downloadPathView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{downloadPath}" />

                <TextView
                    android:id="@+id/downloadSpaceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{downloadSpace}" />
            </LinearLayout>

            <Button
                android:id="@+id/filePickerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/filterGroup"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/filePickerBtn"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/downloadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download_btn" />

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="@string/cancel_btn" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>